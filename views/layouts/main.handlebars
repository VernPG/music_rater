<html lang="en">

  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Music Rater</title>
    <link rel="stylesheet" type="text/css" href="/css/jass.css" />
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Atomic+Age&family=Cormorant&family=Manrope&family=Monoton&family=Righteous&family=Spectral:wght@300&display=swap"
      rel="stylesheet"
    />
    <style>
      body { background-image:
      url("./images/belinda-fewings-68HrHtqdiPE-unsplash.jpg"); background-size:
      cover; }
    </style>

  </head>

  <body>

    <nav
      class="navbar bg-body-tertiary"
      style="
        background: linear-gradient(
          90deg,
          rgba(134, 93, 52, 1) 21%,
          rgba(47, 118, 147, 1) 52%,
          rgba(40, 107, 135, 1) 71%,
          rgba(35, 87, 108, 1) 88%
        );
      "
    >
      <div class="container-fluid">
        <span
          class="navbar-brand mb-0 h1"
          style="font-size: 50px; font-family: monoton; color: white"
        >Emotisong</span>
      </div>
      <div class="collapse navbar-collapse d-flex justify-content-end" style="font-size: 25px; color: white;">
        <a href="/">Rate Songs</a>
        <a href="/info">About Us</a>
        {{#if loggedIn}}
          <button id="logout" class="btn-no-style">Logout</button>
        {{else}}
          <a href="/login">Login</a>
        {{/if}}
      </div>

    </nav>
    <main>
      {{! <aside>
      <h2>Rate Some Songs!</h2>
    </aside> }}
      <div class="rate">
        {{{body}}}
      </div>
    </main>
    {{#if loggedIn}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>

</html>