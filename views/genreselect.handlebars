    <style>
      body {
        background-color: rgb(150, 114, 77);
      }
      .carousel-item img {
        width: auto;
        height: 245px;
        max-height: 245px;
        margin: auto;
        display: block;
      }
      .myCarousel {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        padding-bottom: 50px;
      }
      .carousel-indicators li {
    width: 10px;
    height: 10px;
    border-radius: 100%;
}
.carousel-indicators {
    bottom: -50px;
}
    </style>
    
<title>Bootstrap Carousel</title>

</head>
<body>

    <div class="container-lg my-3">
    <div id="myCarousel" class="carousel slide" data-bs-interval="false"  data-pause="hover">
        <!-- Carousel indicators -->
        <ol class="carousel-indicators">
            <li data-bs-target="#myCarousel" data-bs-slide-to="0" class="active"></li>
            <li data-bs-target="#myCarousel" data-bs-slide-to="1"></li>
            <li data-bs-target="#myCarousel" data-bs-slide-to="2"></li>
        </ol>
        
        <!-- Wrapper for carousel items -->
        <div class="carousel-inner">
            <div class="carousel-item active login-card col-lg-12">
                <a href="/rating" ><img src="./images/rockgenre.jpg" class="d-block" alt="Rock Genre"> Rock</a>              
            </div>

            <div class="carousel-item  login-card col-lg-12">
                <img src="./images/90sgenre.jpg" class="d-block" alt="90's Genre"> 90's       
            </div>

            <div class="carousel-item  login-card col-lg-12">
                <img src="./images/discogenre.jpg" class="d-block" alt="Disco"> Disco
             </div>
        </div>

        <!-- Carousel controls -->
        <a class="carousel-control-prev" href="#myCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </a>
    </div>
</div>
</body>
</html>            

